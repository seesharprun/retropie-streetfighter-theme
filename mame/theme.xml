<theme>
    <formatVersion>4</formatVersion>
    <include>./../prestige.xml</include>
    <view name="system, basic, detailed">
        <image name="logo">
            <path>./art/logo.png</path>
        </image>
    </view>
    <view name="detailed">
        <image name="background_color" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./art/stage.png</path>
        </image>
        <image name="background_logo" extra="true">
            <path>./art/bg.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 0.18</size>
            <color>FFFFFF99</color>
        </image>
        <image name="logo">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.09</pos>
            <maxSize>0.4 0.16</maxSize>
        </image>
        <image name="background_gamelist" extra="true">
            <path>./art/bg.png</path>
            <origin>0 0</origin>
            <pos>0.05 0.2</pos>
            <size>0.9 0.71</size>
            <color>FFFFFF99</color>
        </image>
        <image name="md_image">
            <pos>0.5 0.52</pos>
            <maxSize>0.7 0.50</maxSize>
            <origin>0.5 0.5</origin>
        </image>
        <textlist name="gamelist">
            <pos>0.0 0.75</pos>
            <size>1 0.1</size>
            <alignment>center</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <fontSize>0.075</fontSize>
            <selectorColor>00000000</selectorColor>
            <selectedColor>000000</selectedColor>
            <primaryColor>000000</primaryColor>
            <secondaryColor>f0f0f0</secondaryColor>
            <forceUppercase>1</forceUppercase>
        </textlist>
        <text name="md_lbl_releasedate, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description, md_name">
            <pos>1.0 1.0</pos>
        </text>
    </view>
</theme>